<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center"
        android:background="@drawable/app_back"
        android:gravity="center"
        android:weightSum="1">


        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|left"
            android:layout_marginLeft="8dp"
            android:layout_weight=".2"
            android:gravity="center|left">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@mipmap/back" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".6"
            android:gravity="center">

            <com.hrm.hrm.CustonStyle.TextViewRalewaynormal
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leave Application"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:layout_weight=".2"
            android:gravity="center">


        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_header">

        <RelativeLayout
            android:id="@+id/rl_success"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">




            <LinearLayout
                android:id="@+id/ll_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">


                <LinearLayout
                    android:id="@+id/ll_application_rec_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:orientation="horizontal"

                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">


                            <com.hrm.hrm.CustonStyle.TextViewRalewaynormal
                                android:id="@+id/tv_application_rec"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:elevation="8dp"

                                android:gravity="center"
                                android:padding="8dp"
                                android:text="Application Received" />

                            <LinearLayout
                                android:id="@+id/ll_application_rec"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@drawable/app_back"
                                android:orientation="vertical"
                                android:visibility="visible">

                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_count1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center"
                            android:background="@drawable/circle"
                            android:gravity="center"
                            android:visibility="visible">

                            <com.hrm.hrm.CustonStyle.TextViewRalewaynormal
                                android:id="@+id/tv_count1"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="#ffffff"
                                android:textSize="8sp" />


                        </LinearLayout>


                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/verticalll"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                   />


                <LinearLayout
                    android:id="@+id/ll_tv_my_application_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <com.hrm.hrm.CustonStyle.TextViewRalewaynormal
                        android:id="@+id/tv_my_application"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="My Application"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:id="@+id/ll_tv_my_application"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/app_back"
                        android:orientation="vertical"
                        android:visibility="gone">

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <!--<ScrollView-->
                <!--android:id="@+id/sc_profile"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_below="@+id/ll_button"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:visibility="visible">-->


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/ll_button"
                    >


                    <LinearLayout
                        android:id="@+id/ll_application"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight=".5"
                                android:gravity="center"
                                android:orientation="horizontal">


                                <CheckBox
                                    android:id="@+id/checkBox1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="#2A5F3D"
                                    android:drawableLeft="@android:color/transparent"
                                    android:text="Recent Application"
                                    android:textColor="#2A5F3D"
                                    android:visibility="gone" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight=".5"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight=".3"
                                    android:gravity="center">

                                    <com.hrm.hrm.CustonStyle.TextViewRalewaynormal
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Status "
                                        android:textColor="#2A5F3D"
                                        android:textSize="16sp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight=".7"
                                    android:background="@drawable/rounded_rectangle"
                                    android:orientation="horizontal">

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="30dp"
                                        android:layout_gravity="left"
                                        android:layout_marginTop="5dp"
                                        android:orientation="vertical">

                                        <Spinner
                                            android:id="@+id/spinner_status"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:background="@null"
                                            android:entries="@array/status"
                                            android:gravity="center"
                                            tools:ignore="NestedWeights" />

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right|center"
                                            android:src="@mipmap/arraow_down" />

                                    </FrameLayout>
                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="#66AFCC"
                            android:padding="10dp"

                            android:weightSum="3">


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center">


                                <com.hrm.hrm.CustonStyle.TextViewRalewaynormal
                                    android:id="@+id/tv_app_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Date"
                                    android:textColor="@color/White"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight=".5"
                                android:gravity="center">


                                <com.hrm.hrm.CustonStyle.TextViewRalewaynormal
                                    android:id="@+id/tv_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="Type"
                                    android:textColor="@color/White"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight=".5"
                                android:gravity="center">


                                <com.hrm.hrm.CustonStyle.TextViewRalewaynormal
                                    android:id="@+id/tv_days"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="Days"
                                    android:textColor="@color/White"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_view"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight=".5"
                                android:gravity="center">


                                <com.hrm.hrm.CustonStyle.TextViewRalewaynormal
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="View"
                                    android:textColor="@color/White"
                                    android:textSize="13sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_close"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight=".5"
                                android:visibility="invisible"
                                android:gravity="center">


                                <com.hrm.hrm.CustonStyle.TextViewRalewaynormal
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:text="Cancel"
                                    android:textColor="@color/White"
                                    android:textSize="13sp" />
                            </LinearLayout>


                        </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/ll"

                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:orientation="vertical">

                            <com.github.paolorotolo.expandableheightlistview.ExpandableHeightListView
                                android:id="@+id/lv_app_received"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone">

                            </com.github.paolorotolo.expandableheightlistview.ExpandableHeightListView>

                            <com.hrm.hrm.CustonStyle.TextViewRalewaynormal
                                android:id="@+id/tv_lv_app_received"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="50dp"
                                android:gravity="center"
                                android:text="No Data Found"
                                android:textSize="16dp"
                                android:visibility="gone" />


                        </RelativeLayout>

                    </ScrollView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_my_application"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <LinearLayout
                                android:id="@+id/ll_new_application"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:layout_weight=".4"
                                android:background="@drawable/app_back"
                                android:gravity="center"
                                android:padding="8dp">

                                <com.hrm.hrm.CustonStyle.TextViewRalewaynormal
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="New Application"
                                    android:textColor="#ffffff"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight=".6"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight=".3"
                                    android:gravity="center">

                                    <com.hrm.hrm.CustonStyle.TextViewRalewaynormal
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Status "
                                        android:textColor="#2A5F3D"
                                        android:textSize="16sp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight=".7"
                                    android:background="@drawable/rounded_rectangle"
                                    android:orientation="horizontal">

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="30dp"
                                        android:layout_gravity="left"
                                        android:layout_marginTop="5dp"
                                        android:orientation="vertical">

                                        <Spinner
                                            android:id="@+id/spinner_month"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:background="@null"
                                            android:entries="@array/status"
                                            android:gravity="center"
                                            tools:ignore="NestedWeights" />

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right|center"
                                            android:src="@mipmap/arraow_down" />

                                    </FrameLayout>
                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">


                            <com.hrm.hrm.CustonStyle.TextViewRalewaynormal
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="Application Approvers : Neeraj Arora >> Divya Ranjan"
                                android:textColor="#66AFCC"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="#66AFCC"
                            android:padding="10dp"
                            android:weightSum="3">


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center">


                                <com.hrm.hrm.CustonStyle.TextViewRalewaynormal
                                    android:id="@+id/tv_app_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:text="Date"
                                    android:textColor="@color/White"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight=".5"
                                android:gravity="center">


                                <com.hrm.hrm.CustonStyle.TextViewRalewaynormal
                                    android:id="@+id/tv_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="Type"
                                    android:textColor="@color/White"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight=".5"
                                android:gravity="center">


                                <com.hrm.hrm.CustonStyle.TextViewRalewaynormal
                                    android:id="@+id/tv_days"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="Days"
                                    android:textColor="@color/White"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_view"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight=".5"
                                android:gravity="center">


                                <com.hrm.hrm.CustonStyle.TextViewRalewaynormal
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="View"
                                    android:textColor="@color/White"
                                    android:textSize="13sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/my_ll_close"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight=".5"
                                android:visibility="invisible"
                                android:gravity="center">


                                <com.hrm.hrm.CustonStyle.TextViewRalewaynormal
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="Cancel"
                                    android:textColor="@color/White"
                                    android:textSize="13sp" />
                            </LinearLayout>


                        </LinearLayout>
                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/ll"

                            >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                           >

                            <com.github.paolorotolo.expandableheightlistview.ExpandableHeightListView
                                android:id="@+id/lv_my_app"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone">

                            </com.github.paolorotolo.expandableheightlistview.ExpandableHeightListView>

                            <com.hrm.hrm.CustonStyle.TextViewRalewaynormal
                                android:id="@+id/tv_lv_my_app"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="50dp"
                                android:gravity="center"
                                android:text="No Data Found"
                                android:textSize="16dp"
                                android:visibility="gone" />


                        </RelativeLayout>

                        </ScrollView>
                    </LinearLayout>


                </RelativeLayout>


            <!--</ScrollView>-->


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">


            <com.hrm.hrm.CustonStyle.TextViewRalewaynormal
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Server Error"
                android:textSize="20sp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
